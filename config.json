{
  "pretrained": "Salesforce/codet5-base",
  "data_dir": "data/",
  "solution_prefix": "data/solutions/",
  "train_data": "labeled/train.jsonl",
  "valid_data": "labeled/test.jsonl",
  "test_data": "labeled/test.jsonl",
  "unlabeled_train_data": "unlabeled/code_contests_train_python.jsonl",
  "unlabeled_test_data": "unlabeled/code_contests_test_python.jsonl",
  "data_loader": {
    "args": {
      "batch_size": 8,
      "shuffle": true,
      "num_workers": 4
    }
  },
  "optimizer": {
    "type": "Adam",
    "args":{
      "lr": 5e-5
    }
  },
  "metrics": [],
  "trainer": {
    "epochs": 1000,
    "save_dir": "saved/0911.correctness/",
    "save_period": 10,
    "valid_period": 10,
    "pseudo_label_period": 5,
    "pseudo_label_samples": 200,
    "early_stopping_patience": 10
  },
  "train": {
    "generation_config": {
      "length_penalty": 1.0,
      "max_new_tokens": 150,
      "num_beams": 5,
      "repetition_penalty": 2.5,
      "early_stopping": true,
      "num_return_sequences": 1
    }
  },
  "test_labeling": {
    "test_soundness": {
      "args": {
        "num_testcase_generation": 5,
        "num_solution_sampling": 5
      }
    },
    "test_completeness": {
      "args": {
        "num_testcase_sampling": 5
      }
    }
  },
  "test": {
    "generation_config": {
      "length_penalty": 1.0,
      "max_new_tokens": 150,
      "num_beams": 10,
      "repetition_penalty": 2.5,
      "early_stopping": true,
      "num_return_sequences": 10
    }
  },
  "label": {
    "generation_config": {
      "length_penalty": 1.0,
      "max_new_tokens": 150,
      "num_beams": 10,
      "repetition_penalty": 2.5,
      "early_stopping": true,
      "num_return_sequences": 10
    }
  },
  "source_encoding": {
    "args": {
      "add_special_tokens": false,
      "max_length": 512,
      "padding": true,
      "return_tensors": "pt",
      "truncation": true
    }
  }
}
